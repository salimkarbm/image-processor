{
    "name": "starter",
    "version": "1.0.0",
    "description": "project starter",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "postinstall": "tsc",
        "lint": "eslint --ext .ts . --fix",
        "format": "npm run prettier && npm run lint ",
        "prettier": "prettier --config .prettierrc --ignore-path .gitignore  --write './src/**/*.+(js|ts)'",
        "jasmine": "jasmine",
        "start:dev": "npm run tsc && nodemon  ./src/app.ts",
        "start:prod": "npm run tsc && NODE_ENV=production nodemon ./src/app.js",
        "tsc": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/salimkarbm/starter.git"
    },
    "author": "salim imuzai",
    "license": "ISC",
    "keywords": [
    "api",
    "security",
    "express",
    "authentication",
    "authorization",
    "jwt",
    "bcrypt",
    "helmet",
    "cors",
    "validation",
    "sanitization",
    "xss",
    "nodejs",
    "typescript"
  ],
    "bugs": {
        "url": "https://github.com/salimkarbm/starter/issues"
    },
    "homepage": "https://github.com/salimkarbm/starter#readme",
    "dependencies": {
        "@types/compression": "^1.8.1",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^16.1.4",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "xss": "^1.0.15"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.8.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.5.4",
        "nodemon": "^2.0.15",
        "prettier": "^3.6.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.5"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
